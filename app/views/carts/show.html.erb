
<% @order_items.each do |item| %>
    <h3> <%= item.product.name %></h3>
    <h5> $<%= item.product.price %></h5>
    <br>

    <%= form_for item do |f| %>
    
        <%= f.hidden_field :product_id, :value => item.product.id %>
        <%= f.number_field :quantity, :value => item.quantity.to_i, :readonly => true %>
        <%= link_to "Remove Items", order_item_path(item), method: :delete %>
        <!--<%= f.submit "Update Cart" %>-->

    <% end %>
    
    <h5>Subtotal: $<%= item.total %></h5>
    <br>
<% end %>

<h3> Your current cart value is: $<%= current_order.subtotal %></h3>
<%= link_to "Go to products list", products_path, class:'btn btn-primary' %>
<%= link_to "Request all products on cart", products_path, class:'btn btn-primary' %>